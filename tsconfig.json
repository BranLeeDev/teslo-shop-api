{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@env/*": ["src/common/modules/config/environments/*"],
      "@entity/*": ["src/common/modules/database/entities/*"],
      "@products/*": ["src/products/*"],
      "@images/*": ["src/images/*"],
      "@database/*": ["src/common/modules/database/*"],
      "@common/*": ["src/common/*"]
    }
  }
}
